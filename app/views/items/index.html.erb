<p id="notice"><%= notice %></p>

<h4 class="in-line">Items</h4>
<div class="add-link">
  <%= link_to image_tag("add.png", class: "btn-img" ).html_safe + " Agregar item", new_item_path, class: "btn btn-xs" %>
</div>
<br><br>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Area</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.area.name %></td>
        <td class="action-icon"><%= link_to image_tag("view.png"), item %></td>
        <td class="action-icon"><%= link_to image_tag("edit.png"), edit_item_path(item) %></td>
        <td class="action-icon"><%= link_to image_tag("delete.png"), item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= paginate @items %>
<%= page_entries_info @items %>

