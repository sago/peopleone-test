<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h4>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="field form-group">
      <%= form.label "Nombre:"%>
      <%= form.text_field :name, id: :item_name, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Área:" %>
      <%= form.select :area_id, Area.all.collect { |c| [ c.name, c.id ] }, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Precio:" %>
      <%= form.text_field :price, id: :item_price, class: "form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Descripción:" %>
      <%= form.text_area :description, id: :item_description, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>

<% end %>
