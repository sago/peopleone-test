<%= form_with(model: area, local: true) do |form| %>
  <% if area.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(area.errors.count, "error") %> prohibited this area from being saved:</h2>

      <ul>
      <% area.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label "Nombre:" %>
    <%= form.text_field :name, id: :area_name, class: "form-control"  %>
  </div>

  <div class="field form-group">
    <%= form.label "Catálogo:" %>
    <%= form.select :catalogue_id, Catalogue.all.collect { |c| [ c.name, c.id ] }, class: "form-control form-control-sm"  %>
  </div>

  <div class="field form-group">
    <%= form.label "Descripcioón:" %>
    <%= form.text_area :description, id: :area_description, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
